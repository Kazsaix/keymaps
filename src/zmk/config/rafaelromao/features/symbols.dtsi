/ {
    #define SYMBOL(NAME, SYMBOLS) \
        mc_##NAME: mc_##NAME { \
            compatible = "zmk,behavior-macro"; \
            label = ZMK_MACRO_STRINGIFY(mc_##NAME); \
            #binding-cells = <0>; \
            wait-ms = <0>; \
            tap-ms = <0>; \
            bindings = <&macro_tap SYMBOLS>; \
        };

    #define SHIFTED_SYMBOL(NAME, SHIFTED) \
        mm_##NAME: mm_##NAME { \
            compatible = "zmk,behavior-mod-morph"; \
            label = ZMK_MACRO_STRINGIFY(mm_##NAME); \
            #binding-cells = <0>; \
            bindings = <&mc_##NAME>, <SHIFTED>; \
            mods = <(MOD_LSFT|MOD_RSFT)>; \
        };

    symbols {
        SYMBOL(bti,   &kp GRAVE &kp SPACE)
        SYMBOL(dqo,   &kp DQT &kp SPACE)
        SYMBOL(sqo,   &kp SQT &kp SPACE)
        SYMBOL(tilde, &kp TILDE &kp SPACE)
        SYMBOL(caret, &kp CARET &kp SPACE)
        SYMBOL(and,   &kp AMPS &kp AMPS)
        SYMBOL(or,    &kp PIPE &kp PIPE)

        SHIFTED_SYMBOL(and, &kp AMPS)
        SHIFTED_SYMBOL(or,  &kp PIPE)
    };
};
