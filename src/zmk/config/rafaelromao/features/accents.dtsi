/ {
    #define ACCENTED_KEY(NAME, KEY, DEAD_KEY) \
        ac_##NAME##_l: ac_##NAME##_l { \
            label = ZMK_MACRO_STRINGIFY(ac_##NAME##_l); \
            wait-ms = <0>; \
            tap-ms = <0>; \
            compatible = "zmk,behavior-macro"; \
            #binding-cells = <0>; \
            bindings \
                = <&macro_press &kp LALT> \
                , <&macro_tap &kp DEAD_KEY> \
                , <&macro_release &kp LALT> \
                , <&macro_tap &kp KEY> \
                ; \
        }; \
        ac_##NAME##_u: ac_##NAME##_u { \
            label = ZMK_MACRO_STRINGIFY(ac_##NAME##_u); \
            wait-ms = <0>; \
            tap-ms = <0>; \
            compatible = "zmk,behavior-macro"; \
            #binding-cells = <0>; \
            bindings \
                = <&macro_release &kp LSHFT> \
                , <&macro_press &kp LALT> \
                , <&macro_tap &kp DEAD_KEY> \
                , <&macro_release &kp LALT> \
                , <&macro_press &kp LSHFT> \
                , <&macro_tap &kp KEY> \
                , <&macro_release &kp LSHFT> \
                ; \
        }; \
        ac_##NAME: ac_##NAME { \
            label = ZMK_MACRO_STRINGIFY(ac_##NAME); \
            compatible = "zmk,behavior-mod-morph"; \
            #binding-cells = <0>; \
            bindings = <&ac_##NAME##_l>, <&ac_##NAME##_u>; \
            mods = <(MOD_LSFT|MOD_RSFT)>; \
            keep-mods = <(MOD_LSFT|MOD_RSFT)>; \
        };

    accents {
        ACCENTED_KEY(agrv, A, GRAVE)
        ACCENTED_KEY(aacu, A, E)
        ACCENTED_KEY(atil, A, N)
        ACCENTED_KEY(acir, A, I)
        ACCENTED_KEY(eacu, E, E)
        ACCENTED_KEY(ecir, E, I)
        ACCENTED_KEY(iacu, I, E)
        ACCENTED_KEY(oacu, O, E)
        ACCENTED_KEY(otil, O, N)
        ACCENTED_KEY(ocir, O, I)
        ACCENTED_KEY(uacu, U, E)

        ac_ccdi: ac_ccdi {
            wait-ms = <0>;
            tap-ms = <0>;
            label = "ç";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp C>
                , <&macro_release &kp LALT>
                ;
        };
    };
};