/ {
    smart-cases {
        caps_word {
            compatible = "zmk,behavior-caps-word";
            label = ZMK_MACRO_STRINGIFY(caps_word);
			#binding-cells = <0>;  
            continue-list = <UNDERSCORE MINUS BACKSPACE DELETE>;
        };

        mm_case: mm_case {
            compatible = "zmk,behavior-mod-morph";
            label = ZMK_MACRO_STRINGIFY(mm_case);
            #binding-cells = <0>;
            bindings = <&msk MEDIA LSHFT>, <&caps_word>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };
};